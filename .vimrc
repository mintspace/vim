" Vretical tab lines
set listchars=tab:\|\ 
set list

syntax on "Syntax on
set mouse=a "Mouse on
set number "Line numbers

" Color scheme
colorscheme snazzy

" Lines of history
set history=400

" Lines to go j/k keys
set so=10

" Search like in browsers set incsearch

" Regular expressions magic
set magic

" Show text over text indicator
set showmatch

" Turn backup off
set nobackup
set nowb
set noswapfile

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines


